<div class="row">
    <div class="small-12 large-6 columns">
        {% include '@ProductSetWidget/_partials/images.twig' with {productSet: _widget.productSet} %}
    </div>

    <div class="small-12 large-6 columns">
        {% include '@ProductSetWidget/_partials/products.twig' with {productViews: _widget.productViews} %}
    </div>
</div>

{% if _widget.productSet.description %}
    <div class="row">
        <div class="small-12 columns">
            <div class="callout">
                <h5>{{ 'product.attribute.long_description' | trans }}</h5>
                <p>{{ _widget.productSet.description }}</p>
            </div>
        </div>
    </div>
{% endif %}
